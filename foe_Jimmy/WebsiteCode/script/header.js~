
  $(function() {
      $(window).on("scroll", function() {
          if($(window).scrollTop() > 50) {
              $(".extra_header").css("display", "none");
              $(".desc_desk").css("font-size", "1em");
              $(".search").css("display", "none");
              $(".logo_desk").attr("src","images/logo_mob.png");

          } else {
             $(".extra_header").css("display", "block");
            $(".logo_desk").attr("src","images/logo_useable.png");
            $(".desc_desk").css("font-size", "1.5em");
            $(".search").css("display", "inline");
          }
      });
  });
